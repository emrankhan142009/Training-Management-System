@model TMS.Models.Tasks

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<h2>Create</h2>

<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div><h4 class="text-primary">@ViewBag.msg</h4></div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Course Name</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BatchId" class="control-label">Batch ID</label>
                <select asp-for="BatchId" class="form-control" asp-items="ViewBag.BatchId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TraineeId" class="control-label">Trainee ID</label>
                <select asp-for="TraineeId" class="form-control" asp-items="ViewBag.TraineeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InstructorId" class="control-label">Instructor Name</label>
                <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Task Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Task No.</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Task Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignDate" class="control-label">Assign Date</label>
                <input asp-for="AssignDate" class="form-control" />
                <span asp-validation-for="AssignDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmissionDate" class="control-label">Submission Date</label>
                <input asp-for="SubmissionDate" class="form-control" />
                <span asp-validation-for="SubmissionDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="InstructorTaskIndex" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
